@model ProyectoVentasElectronicas.Models.Products



<h1>New Products </h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_id" class="control-label"></label>
                <select asp-for="Category_id" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Category_id", "Name"))">
                    <option value="">Select a Category</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Suplier_id" class="control-label"></label>
                <select asp-for="Suplier_id" class="form-control" asp-items="@(new SelectList(ViewBag.Supliers, "Suplier_id", "Name"))">
                    <option value="">Select a Supplier</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Products">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
