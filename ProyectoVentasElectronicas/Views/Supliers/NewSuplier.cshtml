@model ProyectoVentasElectronicas.Models.Supliers

@{
    ViewData["Title"] = "Create Suplier";
}

<h1 class="mb-4">Create Suplier</h1>

<h4>Supliers</h4>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="NewSuplier">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label mb-1"></label>
                <input asp-for="Name" class="form-control" placeholder="Type here" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Direction" class="control-label mb-1"></label>
                <input asp-for="Direction" class="form-control" placeholder="Type here" />
                <span asp-validation-for="Direction" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 ">
                <label asp-for="Telephone" class="control-label mb-1"></label>
                <input asp-for="Telephone" class="form-control" placeholder="Type here" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div class="mt-2">
        <a asp-action="Supliers">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
